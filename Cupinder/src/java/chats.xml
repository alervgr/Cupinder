<struts>
    <package name="chats" extends="struts-default" namespace="/">
        <action name="irChat" class="acciones.chatAcciones">
            <result name="success">/chat/chat.jsp</result>
        </action>
        <action name="mostrarMensajesChat" class="acciones.chatAcciones" method="mostrarMensajesChat">
            <result name="success">/chat/chat.jsp</result>
        </action>
        <action name="enviarMensaje" class="acciones.chatAcciones" method="enviarMensaje">
            <result name="success">/chat/chat.jsp</result>
        </action>
    </package>
</struts>
